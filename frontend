import streamlit as st
import requests
import uuid
import time
import pandas as pd

# ======================================================
# Streamlit Config
# ======================================================
st.set_page_config(
    page_title="Tenant Chatbot Frontend",
    layout="wide",
    initial_sidebar_state="expanded"
)

# ======================================================
# CSS Styling
# ======================================================
st.markdown("""
<style>
